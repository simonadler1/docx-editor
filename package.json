{
  "name": "@eigenpal/docx-editor",
  "version": "0.1.0",
  "description": "A browser-based DOCX template editor with variable insertion support",
  "type": "module",
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    },
    "./headless": {
      "types": "./dist/headless.d.ts",
      "import": "./dist/headless.js",
      "require": "./dist/headless.cjs"
    },
    "./core-plugins": {
      "types": "./dist/core-plugins.d.ts",
      "import": "./dist/core-plugins.js",
      "require": "./dist/core-plugins.cjs"
    },
    "./mcp": {
      "types": "./dist/mcp.d.ts",
      "import": "./dist/mcp.js",
      "require": "./dist/mcp.cjs"
    },
    "./styles.css": "./dist/styles.css"
  },
  "bin": {
    "docx-editor-mcp": "./dist/mcp-cli.js"
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "dev": "vite",
    "build": "tsup && bun run build:css",
    "build:css": "tailwindcss -i ./src/styles.css -o ./dist/styles.css --minify",
    "build:demo": "vite build",
    "test": "bun test",
    "test:watch": "bun test --watch",
    "test:e2e": "npx playwright test",
    "test:e2e:ui": "npx playwright test --ui",
    "test:visual": "npx playwright test visual.spec.ts",
    "test:screenshots": "npx playwright test --project=chromium --reporter=list",
    "prepublishOnly": "bun test && bun run build",
    "typecheck": "tsc --noEmit",
    "lint": "eslint src/",
    "lint:fix": "eslint src/ --fix",
    "format": "prettier --write \"src/**/*.{ts,tsx,js,jsx,json,css}\"",
    "format:check": "prettier --check \"src/**/*.{ts,tsx,js,jsx,json,css}\"",
    "prepare": "husky"
  },
  "peerDependencies": {
    "react": ">=18.0.0",
    "react-dom": ">=18.0.0"
  },
  "peerDependenciesMeta": {
    "react": {
      "optional": true
    },
    "react-dom": {
      "optional": true
    }
  },
  "dependencies": {
    "@radix-ui/react-popover": "^1.1.15",
    "@radix-ui/react-select": "^2.2.6",
    "docxtemplater": "^3.50.0",
    "jszip": "^3.10.1",
    "pizzip": "^3.1.7",
    "prosemirror-commands": "^1.5.2",
    "prosemirror-history": "^1.4.0",
    "prosemirror-keymap": "^1.2.2",
    "prosemirror-model": "^1.19.4",
    "prosemirror-state": "^1.4.3",
    "prosemirror-tables": "^1.8.5",
    "prosemirror-transform": "^1.8.0",
    "prosemirror-view": "^1.32.7",
    "xml-js": "^1.6.11"
  },
  "devDependencies": {
    "@happy-dom/global-registrator": "^13.3.8",
    "@playwright/test": "^1.58.1",
    "@testing-library/react": "^14.1.2",
    "@types/bun": "^1.0.0",
    "@types/react": "^18.2.48",
    "@types/react-dom": "^18.2.18",
    "@typescript-eslint/eslint-plugin": "^8.54.0",
    "@typescript-eslint/parser": "^8.54.0",
    "@vitejs/plugin-react": "^5.1.2",
    "autoprefixer": "^10.4.17",
    "class-variance-authority": "^0.7.0",
    "clsx": "^2.1.0",
    "eslint": "^9.39.2",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^7.0.1",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "postcss": "^8.4.33",
    "prettier": "^3.8.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "tailwind-merge": "^2.2.1",
    "tailwindcss": "^3.4.1",
    "tailwindcss-animate": "^1.0.7",
    "tsup": "^8.0.1",
    "typescript": "^5.3.3",
    "vite": "^7.3.1"
  },
  "keywords": [
    "docx",
    "editor",
    "template",
    "word",
    "document",
    "react",
    "prosemirror"
  ],
  "author": "EigenPal",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/eigenpal/docx-editor.git"
  }
}
